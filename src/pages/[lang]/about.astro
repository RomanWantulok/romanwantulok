---
import Layout from "../../layouts/Layout.astro"; // Pozor na cestu ../..
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'cs' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="About | Roman Wantulok">

  <div class="fixed inset-0 pointer-events-none">
    <div class="absolute top-1/3 right-0 w-[600px] h-[600px] bg-gold/5 blur-[150px] rounded-full opacity-40"></div>
  </div>

  <section class="min-h-screen flex flex-col md:flex-row bg-obsidian pt-24 md:pt-0">
    
    <div class="w-full md:w-1/2 flex flex-col justify-center px-6 md:px-20 py-12 md:py-0 relative z-10">
      <div class="space-y-6">
        <p class="text-gold text-xs uppercase tracking-[0.4em] animate-fade-in">{t('about.subtitle')}</p>
        
        <h1 class="text-5xl md:text-8xl font-serif text-platinum leading-none tracking-tight">
          Roman <br/> <span class="italic text-white">Wantulok</span>
        </h1>
        
        <div class="w-20 h-[1px] bg-gold/50 my-8"></div>

        <p class="text-platinum/60 text-sm md:text-base leading-relaxed font-light max-w-md" set:html={t('about.bio')}>
        </p>

        <div class="pt-8">
            <img src="/assets/images/logo.svg" alt="Signature" class="h-40 opacity-50" />
        </div>
      </div>
    </div>

    <div class="w-auto md:w-1/2 h-[50vh] md:h-auto relative overflow-hidden group">
        <div class="absolute inset-0 bg-gradient-to-t from-obsidian via-transparent to-transparent md:bg-gradient-to-r md:from-obsidian md:via-transparent z-10"></div>
        <img 
            src="/assets/images/rwvisuals.png" 
            alt="Roman Wantulok Portrait" 
            class="w-full h-full object-cover grayscale-[30%] group-hover:grayscale-0 transition-all duration-1000" 
        />
    </div>

  </section>

  <section class="py-32 px-6 md:px-12 bg-carbon relative z-10">
    <div class="max-w-7xl mx-auto">
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-24">
        
        <div class="space-y-4 group">
            <span class="text-4xl md:text-5xl text-gold/20 font-serif transition-colors duration-300 group-hover:text-gold">01</span>
            <h3 class="text-xl text-white font-serif uppercase tracking-widest">{t('about.f1_title')}</h3>
            <p class="text-platinum/50 text-xs leading-relaxed">
                {t('about.f1_desc')}
            </p>
        </div>

        <div class="space-y-4 group">
            <span class="text-4xl md:text-5xl text-gold/20 font-serif transition-colors duration-300 group-hover:text-gold">02</span>
            <h3 class="text-xl text-white font-serif uppercase tracking-widest">{t('about.f2_title')}</h3>
            <p class="text-platinum/50 text-xs leading-relaxed">
                {t('about.f2_desc')}
            </p>
        </div>

        <div class="space-y-4 group">
            <span class="text-4xl md:text-5xl text-gold/20 font-serif transition-colors duration-300 group-hover:text-gold">03</span>
            <h3 class="text-xl text-white font-serif uppercase tracking-widest">{t('about.f3_title')}</h3>
            <p class="text-platinum/50 text-xs leading-relaxed">
                {t('about.f3_desc')}
            </p>
        </div>

      </div>
    </div>
  </section>

  <section class="py-24 px-6 bg-obsidian border-t border-white/5">
    <div class="max-w-7xl mx-auto">
        
        <div class="flex flex-col md:flex-row items-baseline justify-between mb-16">
            <h2 class="text-gold text-xs uppercase tracking-[0.4em]">{t('about.gear_title')}</h2>
            <p class="text-platinum/30 text-xs uppercase tracking-widest hidden md:block">{t('about.gear_sub')}</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-12 md:gap-8">
            <div class="group space-y-4">
                <div class="h-[1px] w-full bg-white/10 group-hover:bg-gold/50 transition-colors duration-500 mb-6"></div>
                <h3 class="text-xl font-serif text-white">{t('about.gear_camera')}</h3>
                <p class="text-platinum/50 text-xs">APS-C System</p>
             </div>
            <div class="group space-y-4">
                <div class="h-[1px] w-full bg-white/10 group-hover:bg-gold/50 transition-colors duration-500 mb-6"></div>
                <h3 class="text-xl font-serif text-white">{t('about.gear_lens')}</h3>
                <p class="text-platinum/50 text-xs">Prime Lens</p>
            </div>
             <div class="group space-y-4">
                <div class="h-[1px] w-full bg-white/10 group-hover:bg-gold/50 transition-colors duration-500 mb-6"></div>
                <h3 class="text-xl font-serif text-white">{t('about.gear_drone')}</h3>
                <p class="text-platinum/50 text-xs">Cinematic Stabilization</p>
            </div>
            <div class="group space-y-4">
                <div class="h-[1px] w-full bg-white/10 group-hover:bg-gold/50 transition-colors duration-500 mb-6"></div>
                <h3 class="text-xl font-serif text-white">{t('about.gear_edit')}</h3>
                <p class="text-platinum/50 text-xs">Post-Process</p>
            </div>
        </div>
    </div>
  </section>

  <section class="h-[50vh] flex flex-col justify-center items-center bg-obsidian relative overflow-hidden border-t border-white/5">
     <div class="absolute inset-0 bg-[url('/assets/images/DSC02483-Enhanced-NR.webp')] bg-cover bg-center opacity-10 blur-sm pointer-events-none"></div>
     <div class="absolute inset-0 bg-gradient-to-t from-obsidian via-transparent to-transparent"></div>
     
     <div class="relative z-10 text-center px-4">
         <p class="text-platinum/50 text-xs uppercase tracking-widest mb-4">{t('about.enough')}</p>
         <h2 class="text-4xl md:text-6xl font-serif text-white mb-8">
            {t('about.cta')}
         </h2>
         
         <a href={`/${lang}/contact`} class="inline-block px-20 py-4 border border-gold text-gold hover:bg-gold hover:text-black transition-all duration-300 uppercase tracking-widest text-xs font-bold">
             {t('about.btn')}
         </a>
    </div>
  </section>

</Layout>