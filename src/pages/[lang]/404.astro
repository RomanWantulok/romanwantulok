---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'cs' } },
  ];
}

// Získáme jazyk z parametru URL
const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={`404 | ${t('404.title')}`}>
  <section class="h-screen flex flex-col items-center justify-center bg-obsidian text-center px-4 relative overflow-hidden">
    
    <h1 class="font-serif text-[12rem] md:text-[18rem] text-white/[0.03] font-bold select-none absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none">
        404
    </h1>
    
    <div class="relative z-10 flex flex-col items-center justify-center">
        <h2 class="text-3xl md:text-5xl text-white font-serif mb-6 italic">{t('404.title')}</h2>
        <p class="text-platinum/50 text-sm md:text-base mb-10 max-w-md mx-auto">{t('404.text')}</p>
        
        <a href={`/${lang}`} class="group relative px-8 py-3 border border-gold text-gold text-xs uppercase tracking-[0.2em] hover:bg-gold hover:text-black transition-all duration-300">
            {t('404.btn')}
        </a>
    </div>

  </section>
</Layout>