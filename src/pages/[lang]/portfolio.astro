<Layout title="Portfolio | Roman Wantulok">
  
  <section class="pt-32 pb-12 px-4 text-center bg-obsidian">
    <h1 class="text-4xl md:text-6xl font-serif text-platinum mb-4">
      {t('portfolio.title')} <span class="text-gold italic">{t('portfolio.title_span')}</span>
    </h1>
    <p class="text-platinum/60 max-w-xl mx-auto text-sm md:text-base tracking-wide">
      {t('portfolio.desc')}
    </p>
  </section>

  <section class="pb-20 px-4 md:px-8 bg-obsidian min-h-screen">
    <div class="max-w-7xl mx-auto">
      
      <div class="flex flex-wrap justify-center gap-6 mb-16 sticky top-24 z-40 py-4 bg-obsidian/95 backdrop-blur-sm transition-all duration-300" id="filter-bar">
        {categories.map((cat) => (
          <button 
            class="filter-btn text-xs md:text-sm uppercase tracking-[0.2em] text-platinum/50 hover:text-gold transition-all duration-300 pb-1 border-b border-transparent hover:border-gold"
            data-filter={cat}
          >
            {categoryLabels[cat] || cat}
          </button>
        ))}
      </div>
  
      <div id="gallery-grid" class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        {images.map((img, index) => (
          <div 
            class="relative group overflow-hidden break-inside-avoid gallery-item cursor-none mb-6" 
            data-index={index}
            data-category={img.category}
          >
            
            <img 
              src={img.src} 
              alt={img.alt}
              loading="lazy"
              decoding="async"
              class="w-full h-auto object-cover grayscale-[20%] group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700 ease-out will-change-transform"
              oncontextmenu="return false;"
            />
            
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500 pointer-events-none"></div>

            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center pointer-events-none">
              <div class="text-center translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                <span class="text-gold text-xs uppercase tracking-widest border border-gold px-4 py-2">{t('portfolio.view')}</span>
              </div>
            </div>
  
          </div>
        ))}
      </div>
  
    </div>
  </section>

  <div id="lightbox" class="fixed inset-0 z-[-1] bg-obsidian/98 backdrop-blur-md opacity-0 pointer-events-none transition-opacity duration-300 flex items-center justify-center">
    
    <button id="lb-close" style="cursor: pointer;" class="lb-btn absolute top-6 right-6 text-platinum hover:text-gold z-[99999] p-4 pointer-events-auto">
        <svg xmlns="http://www.w3.org/2000/svg" style="cursor: pointer;" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
