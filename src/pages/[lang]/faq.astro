<script>
    document.addEventListener('DOMContentLoaded', () => {
        // TypeScript Fix: Specifikujeme, že jde o tlačítka
        const faqBtns = document.querySelectorAll('.faq-btn');

        faqBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                // TypeScript Fix: Použijeme 'currentTarget' pro přesnost
                const button = e.currentTarget as HTMLButtonElement;
                const content = button.nextElementSibling as HTMLElement;
                const verticalLine = button.querySelector('.vertical-line') as HTMLElement;
                
                // Kontrola existence elementů (proti "possibly null")
                if (!content || !verticalLine) return;

                // Zjistit stav
                const isOpen = content.classList.contains('grid-rows-[1fr]');
                
                // Zavřít všechny ostatní (Accordion effect)
                document.querySelectorAll('.faq-content').forEach(c => {
                    c.classList.remove('grid-rows-[1fr]');
                    c.classList.add('grid-rows-[0fr]');
                });
                
                // Resetovat ikony
                document.querySelectorAll('.vertical-line').forEach(l => {
                    l.classList.remove('rotate-0');
                    l.classList.add('rotate-90');
                });
                
                // Zvýraznění aktivního boxu (volitelné)
                document.querySelectorAll('.faq-item').forEach(i => {
                    i.classList.remove('border-gold/50', 'bg-white/[0.05]');
                    i.classList.add('border-white/5', 'bg-white/[0.02]');
                });

                // Pokud nebylo otevřeno -> Otevřít toto
                if (!isOpen) {
                    content.classList.remove('grid-rows-[0fr]');
                    content.classList.add('grid-rows-[1fr]');
                    
                    verticalLine.classList.remove('rotate-90');
                    verticalLine.classList.add('rotate-0');

                    // Zvýraznit tento item
                    const parent = button.parentElement;
                    if(parent) {
                        parent.classList.remove('border-white/5', 'bg-white/[0.02]');
                        parent.classList.add('border-gold/50', 'bg-white/[0.05]');
                    }
                }
            });
        });
    });
</script>

